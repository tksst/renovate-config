{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    // ブランチのステータスが確定してからPRを作成する
    ":prNotPending",
    // デフォルトでレートリミットが設定されているので無効にする
    ":disableRateLimiting",
    // Pull Request に、dependabotと同じく"dependencies"というラベルを付ける
    ":label(dependencies)",
    ":timezone(Asia/Tokyo)"
  ],
  // メジャーバージョンアップはまとめない
  "separateMultipleMajor": true,
  "packageRules": [
    {
      // Node.js のメジャーバージョンは renovate 外で実施する
      "matchManagers": ["nvm", "nodenv"],
      "major": { "enabled": false }
    },
    {
      // @types/node のメジャーバージョンは Node.js の最低バージョンに合わせる必要があるので、メジャーバージョンの更新をしない
      "matchManagers": ["npm"],
      "matchPackageNames": ["@types/node"],
      "major": { "enabled": false }
    },
    {
      // npm の dependencies でまとめる
      "groupName": "npm dependencies",
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"]
    },
    {
      // npm の devDependencies でまとめる
      "groupName": "npm devDependencies",
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"]
    },
    {
      // GitHub Actions の更新をまとめる
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"],
      // convert tag to commit hash
      "pinDigests": true
    },
    {
      // Dockerfileについてはまとめない(そんなに大量にあるわけではないので)
      "matchManagers": ["dockerfile"],
      // convert tag to gigest
      "pinDigests": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
